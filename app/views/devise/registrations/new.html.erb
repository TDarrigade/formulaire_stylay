<div class="container">
  <div class= "uniform">
    <h1>Uniform </h1>
    <p>L'inscription devient plus simple</p>
    <br>
    <hr>
    <br>
    <ul>
      <li><%= image_tag("Feuille.png")%>&ensp;  Un seul formulaire pour toute les ecoles</li><br>
      <li><%= image_tag("Chapeau.png")%>&ensp;  Gérer facilement vos candidature</li><br>
      <li><%= image_tag("nuage blanc.png")%>&ensp;   Stocker vos données scolaires</li><br> 
    </ul>
  </div>
  <div>
  <br>
  <br>

  <p>Entrez vos identifiants</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div style="text-align:center;">
     
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Adresse email" %>
    </div>

    <div style="text-align:center;">
    
      <% if @minimum_password_length %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe (#{@minimum_password_length} characters minimum)" %>
        <% else %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe" %>
        <% end %>
    </div>

    <div style="text-align:center;">
      
      <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:"Confirmation" %>
    </div>

    <div style="text-align:center;">
      <%= f.submit "S'inscrire" %>
    </div>
    <% end %>
    <br>
    <br>
    <br>
<br>
<br>
<br>

    <div class="bouton">
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


